<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/chatcolor2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:paddingBottom="50dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please you are free to join any group you want, and you can also create your own group, click here to add a group"
       android:textColor="@color/likeBtnGray"
       android:layout_gravity="center"
        android:gravity="center"/>
    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="@color/black2"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"

        android:background="@color/white"
        android:orientation="vertical">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sports"
            android:textSize="18sp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/colorPrimaryDark"/>


        <TextView
            android:id="@+id/gorup_football"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FootBall"
            android:textSize="16sp"
            android:clickable="true"

            android:textColor="@color/likeBtnGray"
            android:background="@color/whiteTransparentHalf"
            android:drawableLeft="@drawable/football_groups"
            android:drawablePadding="15dp"/>
        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/black2"
            android:layout_marginBottom="15dp"
            android:layout_height="0.5dp"/>

        <TextView
            android:id="@+id/group_basketball"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basketball"
            android:textSize="16sp"
            android:clickable="true"
            android:textColor="@color/likeBtnGray"
            android:background="@color/whiteTransparentHalf"
            android:drawableLeft="@drawable/football_groups"
            android:drawablePadding="15dp"/>
        <View

            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/black2"
            android:layout_marginBottom="15dp"
            android:layout_height="0.5dp"/>

        <TextView
            android:id="@+id/group_swimming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swimming"
            android:clickable="true"
            android:textSize="16sp"
            android:textColor="@color/likeBtnGray"
            android:background="@color/whiteTransparentHalf"
            android:drawableLeft="@drawable/football_groups"
            android:drawablePadding="15dp"/>

        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/black2"
            android:layout_marginBottom="15dp"
            android:layout_height="0.5dp"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entertainments"
            android:textSize="18sp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/colorPrimaryDark"/>


        <TextView
            android:id="@+id/group_movies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movies"
            android:textSize="16sp"
            android:textColor="@color/likeBtnGray"
            android:background="@color/whiteTransparentHalf"
            android:drawableLeft="@drawable/football_groups"
            android:drawablePadding="15dp"/>

        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/black2"
            android:layout_marginBottom="15dp"
            android:layout_height="0.5dp"/>

        <TextView
            android:id="@+id/group_musics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Musics"
            android:textSize="16sp"
            android:textColor="@color/likeBtnGray"
            android:background="@color/whiteTransparentHalf"
            android:drawableLeft="@drawable/football_groups"
            android:drawablePadding="15dp"/>
        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/black2"
            android:layout_marginBottom="15dp"
            android:layout_height="0.5dp"/>

        <TextView
            android:id="@+id/group_dancing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dancing"
            android:textSize="16sp"
            android:textColor="@color/likeBtnGray"
            android:background="@color/whiteTransparentHalf"
            android:drawableLeft="@drawable/football_groups"
            android:drawablePadding="15dp"/>

        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/black2"
            android:layout_marginBottom="15dp"
            android:layout_height="0.5dp"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trending"
            android:layout_marginBottom="15dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"/>


        <TextView
            android:id="@+id/group_fashion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fashion"
            android:textSize="16sp"
            android:textColor="@color/likeBtnGray"
            android:background="@color/whiteTransparentHalf"
            android:drawableLeft="@drawable/football_groups"
            android:drawablePadding="15dp"/>

        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/black2"
            android:layout_marginBottom="15dp"
            android:layout_height="0.5dp"/>
        <TextView
            android:id="@+id/group_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="News"
            android:textSize="16sp"
            android:textColor="@color/likeBtnGray"
            android:background="@color/whiteTransparentHalf"
            android:drawableLeft="@drawable/football_groups"
            android:drawablePadding="15dp"/>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/black2"
        android:layout_marginBottom="15dp"
        android:layout_height="0.5dp"/>
    <TextView
        android:id="@+id/group_relationship"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Relationship"
        android:textSize="16sp"
        android:textColor="@color/likeBtnGray"
        android:background="@color/whiteTransparentHalf"
        android:drawableLeft="@drawable/football_groups"
        android:drawablePadding="15dp"/>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/black2"
        android:layout_marginBottom="15dp"
        android:layout_height="0.5dp"/>






        <TextView
            android:id="@+id/group_politics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Politics"
            android:textSize="16sp"
            android:textColor="@color/likeBtnGray"
            android:background="@color/whiteTransparentHalf"
            android:drawableLeft="@drawable/football_groups"
            android:drawablePadding="15dp"/>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>