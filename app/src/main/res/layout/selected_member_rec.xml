<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:id="@+id/member_group"

        android:layout_marginLeft="10dp"
        android:src="@drawable/facebook_avatar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textselectedgroup"
        android:text="name"
        android:layout_alignLeft="@id/member_group"
        android:layout_alignRight="@id/member_group"
        android:layout_marginRight="5dp"

        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_below="@id/member_group"
        android:textSize="14sp"/>

</RelativeLayout>