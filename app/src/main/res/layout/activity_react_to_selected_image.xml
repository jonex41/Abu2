<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent2"
    android:layout_height="match_parent"

    tools:context=".Activitiesss.ReactToSelectedImage">

    <ImageView
        android:id="@+id/myimageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_placeholder"
        android:layout_gravity="center"
        android:layout_weight="1"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="6"
        android:layout_marginLeft="5dp"
        android:background="@drawable/react_picture_rectangular"
        android:hint="@string/addcaptionshere"
        android:paddingLeft="2dp"
        android:textColor="@color/white"/>
    <ImageButton
        android:id="@+id/btnSendpicture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_stuffs"
        android:clickable="true"
        android:padding="10dp"
        android:layout_marginLeft="3dp"
        android:scaleType="centerInside"
        android:src="@drawable/send_button_action_name"
        />

</LinearLayout>
</LinearLayout>