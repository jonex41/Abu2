<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:src="@drawable/facebook_avatar"
        android:id="@+id/toolbar_image"
       />

    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/toolbar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/toolbar_image"
        android:text="@string/toolbar_narme"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:maxLength="14"
       />

    <TextView

        android:id="@+id/toolbar_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textColor="@color/white"
        android:textSize="14sp"

android:layout_below="@id/toolbar_name"
        android:layout_toRightOf="@+id/toolbar_image"
        android:layout_toEndOf="@+id/toolbar_image" />




</RelativeLayout>