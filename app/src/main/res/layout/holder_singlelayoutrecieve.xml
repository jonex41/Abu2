<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/deleteMessage"
    android:layout_marginRight="8dp"
    android:paddingRight="50dp"
    android:padding="2dp"
    android:background="@color/whiteee2"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/otherImage_for_picture"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/facebook_avatar" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:id="@+id/cardview"
        android:layout_toRightOf="@id/otherImage_for_picture"
        android:background="@color/white"
        android:elevation="2dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:cardCornerRadius="5dp"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:orientation="vertical">

            <VideoView
                android:id="@+id/video_received"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="start"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:layout_gravity="end"
                android:layout_marginRight="5dp"
                android:id="@+id/time"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>



