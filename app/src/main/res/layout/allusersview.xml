<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:baselineAligned="false"
android:layout_marginLeft="10dp"
android:layout_marginStart="8dp"
android:layout_marginRight="6dp"
android:layout_marginEnd="1dp"
android:paddingBottom="5dp"
android:layout_marginTop="12dp"
android:orientation="horizontal">



<LinearLayout
    android:id="@+id/imageLinearLayout"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/facebook_avatar" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/online_image"
            android:layout_width="12dp"
           android:layout_alignBaseline="@id/imageview_profile"
            android:layout_alignRight="@id/imageview_profile"
            android:layout_alignBottom="@id/imageview_profile"
            android:layout_height="12dp"
            android:visibility="gone"
            android:layout_marginRight="3dp"
            android:src="@drawable/circle_stuffs" />

    </RelativeLayout>
</LinearLayout>

<LinearLayout
    android:id="@+id/chatlayout"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:layout_weight="1"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="@string/action_name"
            android:textColor="@android:color/black"/>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxLength="52"
        android:textSize="12sp"
        android:text="@string/my_status" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/action_time"
        android:textSize="11sp" />

<View
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="1.5dp"

    android:background="@color/chatcolor2"/>


</LinearLayout>








        <LinearLayout
            android:id="@+id/buttonlayout"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical">


            <CheckBox

                android:layout_gravity="center"
                android:id="@+id/check_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/circle_online"/>


        </LinearLayout>



    </LinearLayout>


