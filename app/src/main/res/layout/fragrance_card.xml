<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/click_shop"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:adjustViewBounds="true">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_movie_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragrance_cover_height"
                android:id="@+id/thumbnail"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail"
                android:background="@color/greenchat2"
                android:orientation="vertical">


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/fragrance_title_padding"
                android:paddingRight="@dimen/fragrance_title_padding"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/name"
                android:paddingTop="3dp"
                android:textColor="@color/black"
                android:textSize="14sp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   >
                <TextView
                    android:id="@+id/costs_of_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:paddingLeft="@dimen/fragrance_title_padding"
                    android:paddingRight="@dimen/fragrance_title_padding"
                    android:paddingTop="@dimen/fragrance_title_padding"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/minimumto_ordertxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:text="@string/name"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_alignBaseline="@id/costs_of_product"
                       android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/black"
                        android:textSize="12sp"/>

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>